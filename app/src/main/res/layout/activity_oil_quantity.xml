<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.OilQuantityActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/backArrow"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="@string/totalOil"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                style="@style/toolbar"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dateRange"
                android:fontFamily="@font/roboto_condensed_regular"
                style="@style/allText"
                android:layout_gravity="center" />
            <LinearLayout
                android:id="@+id/dateSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">
                <LinearLayout
                    android:id="@+id/from_date_linerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/date_shape">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From date"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            style="@style/allText"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/from_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/from_click_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Click here"
                        android:textSize="18dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/to_date_linerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/date_shape">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To date"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            style="@style/allText"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/to_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="12 Oct 21"
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/to_click_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Click here"
                        android:textSize="18dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/updateResultBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:padding="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/search"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                style="@style/button"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dateTotalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/green">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From Date"
                            android:gravity="left"
                            style="@style/allText"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Date"
                            style="@style/allText"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/fromDateResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            style="@style/allText"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:layout_weight="1"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/toDateResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            style="@style/allText"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oilQuantity"
                    style="@style/allText"
                    android:gravity="right"
                    android:fontFamily="@font/roboto_condensed_regular" />
                <TextView
                    android:id="@+id/totalQuantityResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    style="@style/allText"
                    android:gravity="right"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forMoreInfoToClickHere"
                android:textColor="@color/green"
                android:textSize="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:gravity="right"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>